<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- 拖动到边缘渐变颜色 -->
        <item name="colorPrimary">@color/seekBarProgress</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">#00000000</item>
        <!--控制各个控件的颜色-->
        <item name="colorAccent">@color/seekBarProgress</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@color/colorTransparency</item>
        <item name="android:windowNoTitle">true</item> 
    </style>

    <style name="ToolBarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#00000000</item>
    </style>

</resources>
