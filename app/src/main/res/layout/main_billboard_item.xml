<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/billboard_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/billboard_img"
        android:layout_alignRight="@id/billboard_img"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:text="更新于2016-11-21"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/billboard_img"
        android:text="酷音乐流行榜"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/billboard_img"
        android:layout_below="@id/name"
        android:paddingTop="6dp"
        android:textColor="#999999"
        android:textSize="12sp"
        android:text="desc"/>

    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/billboard_img"
        android:paddingTop="6dp"
        android:singleLine="true"
        android:text="酷音乐流行风向标"
        android:textColor="#808080"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name1"
        android:layout_toRightOf="@id/billboard_img"
        android:paddingTop="6dp"
        android:singleLine="true"
        android:text="酷音乐华语榜"
        android:textColor="#808080"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name2"
        android:layout_toRightOf="@id/billboard_img"
        android:paddingTop="6dp"
        android:singleLine="true"
        android:text="酷音乐粤语榜"
        android:textColor="#808080"
        android:textSize="12sp" />
</RelativeLayout>
</FrameLayout>