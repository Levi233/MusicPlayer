<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/chinese_tv"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/artist_chinese_bg"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:text="华语"/>
    <TextView
        android:id="@+id/occident_tv"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/artist_europe_bg"
        android:textColor="@color/white"
        android:text="欧美"/>
    <TextView
        android:id="@+id/japan_korea_tv"
        android:layout_width="0px"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:background="@drawable/artist_japan_bg"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:layout_height="40dp"
        android:text="日韩"/>
</LinearLayout>